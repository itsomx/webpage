{
  "repositories": [{
    "type": "composer",
    "url": "https://wpackagist.org"
  }],
  "require": {
    "php": ">=5.4",
    "wpackagist-plugin/akismet": "3.1.*",
    "wpackagist-theme/evolve": "3.5.*",
    "wpackagist-plugin/redux-framework": "3.6.0.1",
    "wpackagist-theme/goran": "^1.2",
    "wpackagist-theme/sela": "^1.0",
    "johnpbloch/wordpress": "^4.5",
    "johnpbloch/wordpress-core-installer": "^0.2.1",
    "composer/installers": "^1.0",
    "wpackagist-theme/xt-corporate-lite": "^1.0",
    "wpackagist-plugin/jetpack": "^4.0"
  },
  "extra": {
    "wordpress-install-dir": "public/wp",
    "installer-paths": {
        "public/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
        "public/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
        "public/wp-content/themes/{$name}/": ["type:wordpress-theme"]
    }
  },
  "scripts": {
        "post-install-cmd": [
            "cp public/wp/index.php ./public/index.php",
            "sed -i '' \"s/\\/wp-blog-header/\\/wp\\/wp-blog-header/g\" ./public/index.php"
        ]
    }
}
